extends index.pug
block scripts 
    script(type="text/javascript" src="/js/BinaryTree.js")
    script(type="text/javascript" src="/js/mergeSort.js")
    case algLvl
        when "1"
            script(type="text/javascript" src="/js/merge_sort_lvl1.js")
            script(type="text/javascript" src="/js/formatLvl1Row.js")
        when "2"
            script(type="text/javascript" src="/js/formatRow.js")
            script(type="text/javascript" src="/js/merge_sort_lvl2.js")
            script(type="text/javascript" src="/js/feedback.js")
            script(type="text/javascript" defer src="/js/dragDropLvl2.js")
        default    
            script(type="text/javascript" src="/js/formatRow.js")
            script(type="text/javascript" src="/js/merge_sort_lvl3plus.js")
            script(type="text/javascript" src="/js/feedback.js")
            script(type="text/javascript" defer src="/js/dragDropLvl2.js")
            
            
            
            

//- Here as an example of how to include level specific script
    // level 1 and 2 will share text feedback
    // level 1 needs special colour and animation feedback elements
    case algLvl
        when 1
            script(type="text/javascript" src="/js/text_feedback.js")
            script(type="text/javascript" src="/js/lvl_1_feedback.js")
        when 2
            script(type="text/javascript" src="/js/text_feedback.js")
        default
            script(type="text/javascript" src="/js/feedback.js")


block content 
    case algLvl
        when "1"
            div#gameboard(style="width: 100%; display: flex; flex-direction: column")
                div.arr-holder(style="order: -1") 
                    div.arr-row(style="width: 30%")
                        button.btn.btn-secondary(onclick="confirmQuit()")= "Quit"
                    div.arr-row(style=`height: 75px; width: 40%`)
                        div#msg
                    div.arr-row(style="width: 30%")
                        div.btn-group
                            button.btn.btn-secondary#prev-btn(onclick="getPrevRow()")
                                i.fas.fa-arrow-left 
                            button.btn.btn-secondary#next-btn(onclick="getNextRow()")
                                i.fas.fa-arrow-right  
                        div.arr-row(style="width: 30%")
                        button.btn.btn-secondary#nextLvl-btn(onclick="nextLevel()")= "Next Level"      
        default
            div#gameboard(style="width: 100%; display: flex; flex-direction: column")
                div.arr-holder(style="order: -1") 
                    div.arr-row(style="width: 30%")
                        button.btn.btn-secondary(onclick="confirmQuit()")= "Quit"
                    div.arr-row(style=`height: 75px; width: 40%`)
                        b
                            div#msg
                    div.arr-row(style="width: 30%")
                        button.btn.btn-secondary#nextLvl-btn(onclick="nextLevel()")= "Next Level" 
                   
                